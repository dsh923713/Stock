<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="5dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/xiaohei"
        app:riv_oval="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="嘟嘟"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_deal_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="5dp"
            android:text="@string/deal_num"
            android:textColor="@color/gary"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_win_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_deal_num"
            android:text="@string/win_rate"
            android:textColor="@color/gary"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_max_loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_deal_num"
            android:layout_marginTop="5dp"
            android:text="@string/max_loss"
            android:textColor="@color/gary"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_comprehensive_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_deal_num"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_max_loss"
            android:text="@string/comprehensive_rate"
            android:textColor="@color/gary"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_join_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_max_loss"
            android:layout_marginRight="10dp"
            android:text="@string/join_time"
            android:textColor="@color/gary"
            android:textSize="12sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_join_time"
            android:layout_marginTop="5dp"
            android:background="@color/line_color"/>
    </RelativeLayout>
</LinearLayout>